<div id="<%= udrw.carousel %>" class="carousel slide" data-bs-ride="carousel">
  <!-- Indicators -->
  <div class="carousel-indicators">
  <% udrw.images.forEach((image, index) => { %>
    <button
      type="button"
      data-bs-target="#<%= udrw.carousel %>"
      data-bs-slide-to="<%= index %>"
      class="<%= index === 0 ? "active" : "" %>"
      aria-current="<%= index === 0 ? "true" : undefined %>"
      aria-label="<%= `Slide ${index + 1}` %>"
    ></button>
  <% }); %>
  </div>

  <!--Slides -->
  <div class="carousel-inner">
  <% udrw.images.forEach((image, index) => { %>
    <div
      class="<%= `carousel-item ${index === 0 ? "active" : ""}` %>"
    >
      <a href="<%= image.original.url %>" target="_blank" rel="noopener noreferrer">
        <img
          src="<%= image.original.url %>"
          class="d-block w-100 img-fluid img-thumbnail"
          alt="<%= `Slide ${index + 1}` %>"
          data-bs-target="#<%= udrw.carousel %>"
        />
      </a>
    </div>
  <% }) %>
  </div>

  <!-- Controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#<%= udrw.carousel %>" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#<%= udrw.carousel %>" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>